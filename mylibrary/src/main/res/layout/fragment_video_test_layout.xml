<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/es_b">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linea"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <VideoView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/my_video_view"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:id="@+id/video_control_layout"
            android:gravity="center|left"
            >
            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/video_content">
            <ImageView
                android:id="@+id/video_view_control_image_view"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/half_margin"
                android:src="@mipmap/product_video_stop"
                android:layout_marginLeft="@dimen/base_margin"
                />
            </LinearLayout>
            <SeekBar
                android:id="@+id/video_view_seeker_bar"
                android:layout_width="0dp"
                android:layout_weight="10"
                android:layout_height="2dp"
                android:visibility="visible"
                android:background="@color/es_w"
                />
            <TextView
                android:id="@+id/video_view_timecontrol_text_view"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:gravity="center"
                android:layout_marginLeft="@dimen/half_margin"
                android:layout_height="wrap_content"
                android:text="00:00/00:00"
                android:textSize="@dimen/es_pitch12"
                android:textColor="@color/es_w"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
